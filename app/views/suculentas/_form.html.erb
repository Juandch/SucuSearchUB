<div class="row">
  <div class="col-12">
    <%= form_with(model: suculenta, local: true) do |f|%>
      <% if suculenta.errors.any? %>
        <div id="error_explanation">
          <h2><%= pluralize(suculenta.errors.count, "error") %> prohibited this suculenta from being saved:</h2>

          <ul>
            <% suculenta.errors.full_messages.each do |message| %>
              <li><%= message %></li>
            <% end %>
          </ul>
        </div>
      <% end %>
      <div class="form-group">
        <%=f.label :name, class: 'col-sm-2 col-form-label' %>
        <div class="col-sm-7">
          <%=f.text_field :name, class: 'form-control' %>
        </div>
      </div>
      <div class="form-group">
        <%=f.label 'Tipo de organos', class: 'col-sm-2 col-form-label' %>
        <div class="col-sm-6">
          <%=f.select(:idOrgan, [['Tallo', 1],['Hoja', 2],['Tallo/Hoja', 3]], {include_blank: "Select something"}, { :class => 'form-control' }) %>
        </div>
      </div>
      <div class="form-group">
        <%=f.label 'Familia', class: 'col-sm-2 col-form-label' %>
        <div class="col-sm-6">
          <%=f.select(:idFamily, [['Cactacea', 1],['Agavaceae', 2],['Aizoaceae', 3]], {include_blank: "Select something"}, { :class => 'form-control' }) %>
        </div>
      </div>
      <div class="form-group">
        <%=f.label 'Sustrato', class: 'col-sm-2 col-form-label' %>
        <div class="col-sm-6">
          <%=f.select(:idSustrato, [['Tierra', 1],['Arena', 2],['Gramilla/Carbon', 3]], {include_blank: "Select something"}, { :class => 'form-control' }) %>
        </div>
      </div>
      <div class="form-group">
        <%=f.label :temp, class: 'col-sm-2 col-form-label' %>
        <div class="col-sm-7">
          <%=f.text_field :temp, class: 'form-control' %>
        </div>
      </div>
      <div class="form-group">
        <%=f.label :image, class: 'col-sm-2 col-form-label' %>
        <div class="col-sm-6">
          <div class="custom-file">
            <%=f.file_field :image, class: 'custom-file-input' %>
            <label class="custom-file-label" for="inputGroupFile01">Choose file</label>
          </div>
        </div>
      </div>
      <div class="form-group">
        <div class="col-sm-12">
          <%= link_to 'Back', suculentas_path, class: "btn btn-xs btn-danger" %>
          <%= f.submit class: "btn btn-xs btn-success" %>
        </div>
      </div>
    <% end %>
  </div>
</div>