        <div class="col-sm-10">
          <%=f.select(:object_field, ['Tierra','Arena','Gramilla/Carbon'], {include_blank: "Select something"}, { :class => 'form-control' }) %>
        </div>
      </div>
      <div class="form-group">
        <%=f.label :temperatura, class: 'col-sm-2 col-form-label' %>
        <div class="col-sm-10">
          <%=f.text_field :temperatura, class: 'form-control' %>
        </div>
      </div>
      <div class="custom-file">
        <%=f.label :image, class: 'col-sm-2 custom-file-label' %>
        <div class="col-sm-10">
          <%=f.text_field :image, class: 'custom-file-input' %>
        </div>
      </div>
      <div class="form-group">
        <div class="col-sm-12">
          <%= f.submit class: "btn btn-primary btn-lg" %>
        </div>
      </div>
    <% end %>
  </div>
</div>