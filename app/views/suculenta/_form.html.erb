          <h2><%= pluralize(suculentum.errors.count, "error") %> prohibited this suculentum from being saved:</h2>

          <ul>
            <% suculentum.errors.full_messages.each do |message| %>
              <li><%= message %></li>
            <% end %>
          </ul>
        </div>
      <% end %>
      <div class="form-group">
        <%=f.label :name, class: 'col-sm-2 col-form-label' %>
        <div class="col-sm-10">
          <%=f.text_field :name, class: 'form-control' %>
        </div>
      </div>
      <div class="form-group">
        <%=f.label :organo, class: 'col-sm-2 col-form-label' %>
