        <div class="col-sm-10">
          <%=f.select(:object_field, ['Tallo','Hoja','Tallo/Hoja'], {include_blank: "Select something"}, { :class => 'form-control' }) %>
        </div>
      </div>
      <div class="form-group">
        <%=f.label :Familia, class: 'col-sm-2 col-form-label' %>
        <label for="exampleFormControlSelect2">Example multiple select</label>
        <div class="col-sm-10">
          <%=f.select(:object_field, ['Cactacea','Agavaceae','Aizoaceae'], {include_blank: "Select something"}, { :class => 'form-control' }) %>
        </div>
      </div>
      <div class="form-group">
        <%=f.label :Sustrato, class: 'col-sm-2 col-form-label' %>
